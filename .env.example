# ======================================
# AI Job Matching System - Environment Variables
# Copy this file to .env and update values
# ======================================

# ======================================
# Application Settings
# ======================================
ENVIRONMENT=development
APP_VERSION=1.0.0

# ======================================
# Database Configuration
# ======================================
# PostgreSQL
DB_PASSWORD=secure_db_password_123
DB_PORT=5432

# Redis
REDIS_PASSWORD=redis_password_123
REDIS_PORT=6379

# Qdrant Vector Database
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# ======================================
# API Keys (REQUIRED)
# ======================================
# OpenAI API Key for advanced AI features
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace API Key for additional models
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this

# ======================================
# Service Ports
# ======================================
# Backend API
API_PORT=8080

# AI Service
AI_SERVICE_PORT=8000

# Frontend
FRONTEND_PORT=3000

# Nginx Proxy
HTTP_PORT=80
HTTPS_PORT=443

# ======================================
# Monitoring Ports
# ======================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_PORT=16686
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ======================================
# Development Tools Ports
# ======================================
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ======================================
# Application Configuration
# ======================================
# Backend Settings
GIN_MODE=release
ENABLE_METRICS=true
ENABLE_CACHING=true
RATE_LIMIT=100
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# Worker Settings
WORKER_CONCURRENCY=5
BATCH_SIZE=100
PROCESSING_INTERVAL=30

# AI Service Settings
AI_DEBUG=false
AI_LOG_LEVEL=INFO
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAX_BATCH_SIZE=32
VECTOR_SIZE=384
AI_MAX_WORKERS=4
AI_REQUEST_TIMEOUT=30
AI_CACHE_TTL=3600

# Frontend URLs
FRONTEND_API_URL=http://localhost:8080/api/v1
FRONTEND_AI_URL=http://localhost:8000

# ======================================
# Scaling Configuration
# ======================================
# Service Replicas
API_REPLICAS=2
WORKER_REPLICAS=2

# ======================================
# Email Configuration
# ======================================
# SMTP Settings for production email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# For development, use MailHog instead
# SMTP_HOST=mailhog
# SMTP_PORT=1025

# ======================================
# Monitoring Configuration
# ======================================
# Grafana Admin Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# pgAdmin Credentials
PGADMIN_EMAIL=admin@jobmatch.ai
PGADMIN_PASSWORD=admin123

# ======================================
# Security Settings
# ======================================
# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# ======================================
# Performance Tuning
# ======================================
# Database
DB_MAX_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30

# Redis
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=5

# Cache Settings
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000

# ======================================
# AI/ML Model Settings
# ======================================
# Model Configuration
USE_OPENAI_EMBEDDINGS=false
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Vector Database Settings
VECTOR_SIMILARITY_THRESHOLD=0.7
MAX_VECTOR_RESULTS=100

# Matching Algorithm
MATCHING_WEIGHTS_SKILLS=0.35
MATCHING_WEIGHTS_EXPERIENCE=0.25
MATCHING_WEIGHTS_LOCATION=0.15
MATCHING_WEIGHTS_SALARY=0.15
MATCHING_WEIGHTS_EDUCATION=0.05
MATCHING_WEIGHTS_CULTURAL=0.05

# ======================================
# Development Settings
# ======================================
# Debug Settings
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_MATCHING=false

# Test Data
LOAD_SAMPLE_DATA=true
SAMPLE_JOBS_COUNT=50
SAMPLE_CANDIDATES_COUNT=100

# ======================================
# Backup Configuration
# ======================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ======================================
# Log Configuration
# ======================================
# Log Levels
LOG_LEVEL=INFO
API_LOG_LEVEL=INFO
WORKER_LOG_LEVEL=INFO
AI_LOG_LEVEL=INFO

# Log Rotation
LOG_MAX_SIZE=100M
LOG_MAX_FILES=5
LOG_COMPRESS=true

# ======================================
# Feature Flags
# ======================================
# Enable/disable specific features
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_BATCH_MATCHING=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_EXPORT=true
FEATURE_ADMIN_PANEL=true

# ======================================
# Third-party Integrations
# ======================================
# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Error Tracking
SENTRY_DSN=

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
S3_BUCKET_NAME=

# ======================================
# SSL/TLS Configuration
# ======================================
# SSL Settings
SSL_ENABLED=false
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# Let's Encrypt (for production)
LETSENCRYPT_EMAIL=admin@yourdomain.com
DOMAIN_NAME=yourdomain.com

# ======================================
# Advanced Configuration
# ======================================
# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_AI_REQUESTS=10

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ======================================
# Example Production Values
# ======================================
# For production, update these values:
# ENVIRONMENT=production
# GIN_MODE=release
# AI_DEBUG=false
# LOG_LEVEL=WARN
# SSL_ENABLED=true
# ENABLE_EMAIL_VERIFICATION=true
# LOAD_SAMPLE_DATA=false

# ======================================
# Example Development Values  
# ======================================
# For development, you can use:
# ENVIRONMENT=development
# GIN_MODE=debug
# AI_DEBUG=true
# LOG_LEVEL=DEBUG
# LOAD_SAMPLE_DATA=true
# SMTP_HOST=mailhog
# SMTP_PORT=1025
